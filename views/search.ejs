<div class="row mt-5">
    <div class="col-md-12 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
            <a href="/dashboard">
                <i class="fas fa-long-arrow-alt-left"></i>
            </a>
            Search User</h1>
        <% include ./partials/messages %>
        <div class="table-responsive-sm">
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <form action="/search" method="post">
                            <th scope="col">
                                <label class="sr-only" for="username">Username</label>
                                <div class="input-group mr-sm-2">
                                    <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-user"></i></div>
                                    </div>
                                    <input type="text" class="form-control" id="username" placeholder="Username" name="username">
                                </div>
                            </th>
                            <th scope="col">
                                <label class="sr-only" for="username">Location</label>
                                <div class="input-group mr-sm-2">
                                    <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-search-location"></i></div>
                                    </div>
                                    <input type="text" class="form-control" id="username" placeholder="Username" name="location">
                                </div>
                            </th>
                            <th scope="col">
                                <button type="submit" class="btn btn-sm btn-outline-success mb-1">Search</button>
                            </th>
                        </form>
                    </tr>
                </thead>
                <tbody>
                    <% if(typeof response === 'undefined'){ %>
                        <tr>
                            <td colspan="3">
                                <h3 class="text-center">
                                    Search for users...
                                </h3>
                            </td>
                        </tr>     
                    <% } else{ %>

                        <% if(!response.length){ %>
                            <tr>
                                <th colspan="3" class="text-center">
                                    No user Found.                        
                                </th>
                            </tr>
                        <% } else {%>
                            <tr>
                                <th >
                                    Name                      
                                </th>
                                <th colspan="2">
                                    Email                      
                                </th>
                            </tr>
                            <% response.forEach(function(data , index){ %>
                                <tr>
                                    <td >
                                        <%= index+1 %>. <%= data.name %>                      
                                    </td>
                                    <td colspan="2">
                                        <%= data.email %>                      
                                    </td>
                                </tr>
                            <% }) %>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
      </div>
    </div>
</div>